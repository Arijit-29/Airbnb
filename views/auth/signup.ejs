<%- include('../partials/head') %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="bg-gray-100">
  <%- include('../partials/nav') %>
  <main class="container mx-auto mt-10 p-8 bg-white rounded-xl shadow-lg max-w-2xl">

    <h1 class="text-3xl font-bold mb-8 text-center text-gray-800 border-b pb-4 tracking-wide">
      Create Your Account
    </h1>

    <form action="/sign-up" method="POST" class="max-w-md mx-auto space-y-6">
       <%- include('error') %>
      <div class="flex gap-8">
        <div class="flex-1">
          <label for="firstName" class="block text-sm font-semibold text-gray-700 mb-1">First Name</label>
          <div class="relative">
            <i class="fas fa-user absolute left-3 top-1/2 -translate-y-1/2 text-gray-500"></i>
            <input
              type="text"
              id="firstName"
              name="firstName"
              value="<%= oldInput.firstName ? oldInput.firstName : '' %>"
              placeholder="John"
              class="w-full pl-12 pr-3 py-2 border rounded-md bg-gray-50 
                     focus:bg-white focus:outline-none focus:ring-2 focus:ring-red-500 transition"
              required
            />
          </div>
        </div>

        <div class="flex-1">
          <label for="lastName" class="block text-sm font-semibold text-gray-700 mb-1">Last Name</label>
          <div class="relative">
            <i class="fas fa-user absolute left-3 top-1/2 -translate-y-1/2 text-gray-500"></i>
            <input
              type="text"
              id="lastName"
              name="lastName"
              placeholder="Doe"
              value="<%= oldInput.lastName ? oldInput.lastName : '' %>"
              class="w-full pl-12 pr-3 py-2 border rounded-md bg-gray-50 
                     focus:bg-white focus:outline-none focus:ring-2 focus:ring-red-500 transition"
            />
          </div>
        </div>
      </div>
      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-1">Email Address</label>
        <div class="relative">
          <i class="fas fa-envelope absolute left-3 top-1/2 -translate-y-1/2 text-gray-500"></i>
          <input
            type="email"
            id="email"
            name="email"
            placeholder="your.email@example.com"
            value="<%= oldInput.email ? oldInput.email : '' %>"
            class="w-full pl-12 pr-3 py-2 border rounded-md bg-gray-50 
                   focus:bg-white focus:outline-none focus:ring-2 focus:ring-red-500 transition"
            required
          />
        </div>
      </div>

     
      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-1">Password</label>
        <div class="relative">
          <i class="fas fa-lock absolute left-3 top-1/2 -translate-y-1/2 text-gray-500"></i>
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Enter Your Password"
            class="w-full pl-12 pr-3 py-2 border rounded-md bg-gray-50 
                   focus:bg-white focus:outline-none focus:ring-2 focus:ring-red-500 transition"
            required
          />
        </div>
      </div>

     
      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-1">Confirm Password</label>
        <div class="relative">
          <i class="fas fa-lock absolute left-3 top-1/2 -translate-y-1/2 text-gray-500"></i>
          <input
            type="password"
            id="confirmPassword"
            name="confirmPassword"
            placeholder="Confirm Your Password"
            class="w-full pl-12 pr-3 py-2 border rounded-md bg-gray-50 
                   focus:bg-white focus:outline-none focus:ring-2 focus:ring-red-500 transition"
            required
          />
        </div>
      </div>

    
      <div class="p-4 bg-gray-50 rounded-lg border border-gray-200">
        <p class="text-sm font-semibold text-gray-700 mb-2">Register as:</p>
        <div class="flex items-center gap-6">
          <label class="flex items-center gap-2 cursor-pointer">
            <input type="radio" name="userType" value="guest" class="form-radio text-red-500">
            <span>Guest (free)</span>
          </label>
          <label class="flex items-center gap-2 cursor-pointer">
            <input type="radio" name="userType" value="host" class="form-radio text-red-500">
            <span>Host (at just 19â‚¹)</span>
          </label>
        </div>
      </div>

     
      <label class="flex items-start gap-2 cursor-pointer">
        <input type="checkbox" name="terms" class="mt-0.5 form-checkbox text-red-500" required>
        <span class="text-gray-700 text-sm">
          I agree to the
          <a href="#" class="text-red-500 font-medium hover:underline">terms and conditions</a>
        </span>
      </label>

     
      <button
        type="submit"
        class="w-full  bg-red-500 hover:bg-red-600 text-white py-3 rounded-md 
               focus:ring-4 focus:ring-red-300 font-semibold text-lg 
               transition flex items-center justify-center gap-2"
      >
          Register  <i class="fas fa-arrow-right"></i>
      </button>

    
      <p class="text-center text-gray-600">
        Already have an account?
        <a href="/login" class="text-red-500 font-medium hover:underline">Log in</a>
      </p>
    </form>
  </main>
</body>
</html>
